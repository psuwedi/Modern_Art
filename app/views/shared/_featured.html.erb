    <div class="col-xs-12"  style="background:white">
      <%
      # making the page to paginate
      @arts = Art.all
      count = 12
      pagination = (@arts.count) % 12
      if pagination == 0
        pagination = (@arts.count) / 12
      else
        pagination = ((@arts.count) / 12) + 1
      end
      row_id = 1
      @arts.reverse.each do |art|
        img = art.art_path


        %>

        <%if count%12==0
          if count == 12
            display = "block"
          else
            display = "none"
          end
          id = 200*row_id
         %>
        <div class="row" style="background: ; display:<%=display%>" id = "<%=id%>" >
          <%
          row_id += 1
        end
        %>
        <!-- Go to the next column -->

        <div class="col-xs-3" style="background: white; border: 1px solid #ccc;  padding-top:20px;margin-bottom: 30px; ">


          <a href="arts/show_art?id=<%=art.id%>" data-toggle="<%= art.name %>" data-target="#<C art.name %>" id="<%= art.title %>" > <%= image_tag(img, class: "img-responsive",:style=>"width:100%; height:150px;")%></a>
