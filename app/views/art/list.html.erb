<% if @arts.blank? %>
<p>There are not any arts currently available.</p>
<% else %>
<p>These are the current arts in our system</p>
<ul id="arts">
<% @arts.each do |c| %>






<li>
<%= link_to c.title, {:action => 'show', :id => c.id} -%>
<b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
<b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
:confirm => "Are you sure you want to delete this item?" %></b>
</li>




<% end %>
</ul>
<% end %>
<p><%= link_to "Add new Art", {:action => 'new' }%></p>