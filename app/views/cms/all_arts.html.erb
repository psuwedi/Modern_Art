
<%= render :partial => "shared/cms_index" %>



<div id="page-wrapper" style="min-height: 900px">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="page-header">Arts </h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>

  <div class="row">
    <div class="col-sm-10">



      <%  if flash[:notice] %>
      <div col-xs-offset-4 col-xs-4 col-xs-offset-4>
        <div class="alert alert-success ">
          <button data-dismiss="alert" class="close" type="button">×</button>
          <h4>Success</h4>
          <%= flash[:notice] %>
        </div>
      </div>
      <% end %>

      <%  if flash[:error] %>
      <div col-xs-offset-4 col-xs-4 col-xs-offset-4>
        <div class="alert alert-error col-xs-offset-4 col-xs-4 col-xs-offset-4">
          <button data-dismiss="alert" class="close" type="button">×</button>
          <h4>Error</h4>
          <%= flash[:error] %>
        </div>

      </div>
      <% end %>



      <div class="panel panel-grey" >
        <div class="panel-heading" style="padding: 15px">
          <div class="row">


           <form class="form-horizontal" action="/cms/new_category" method="POST"  enctype="multipart/form-data">
             <div class="col-sm-12">
<!-- 
              <a href="" class="btn btn-danger pull-right" style="margin:5px; border-radius:0px"> <span class=""> Delete</span>
              </a> -->


              <a href="/cms/new_arts" class="btn btn-success pull-right" style="margin:5px; border-radius:0px"> <span class=""> Add art piece</span>
              </a> 
              
            </div>

            <div class="form-group">


              <table class="table table-striped">
                <thead>


                  <tr>
                    <th>Name </th>
                    
                    <th>Artist </th>
                    <th>Price</th>
                    <th>Stock Levels</th>
                    <th>Date</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% @arts.each do |at| 
                    price = at.price 
                    if price.blank?
                      price = 0.00
                    end
                    %>
                  <tr>


                    <td>   <%= at.name %></td>

                    <td> Phidelis Suwedi</td>
                    <td><%= price /1.00 %> </td>
                    <td> <%= at.stock_level %></td>
                    <td> <%= at.created_at %></td>
                    <td>     <a href="/cms/show_art?id=<%=at.id%>" class="btn btn-info ""> <span style = "" class="glyphicon glyphicon-pencil"></span> </a> |  <a href="" class="btn btn-danger " onclick="ask('<%=at.id%>')"> <span style = "" class="glyphicon glyphicon-trash"></span></a>



                    </td>  


                  </td>


                </tr>

                <% end %>

              </tbody>
            </table>

          </form>
        </div>
      </div>

    </div>
  </div>












  <script>

    function ask(id) {
      var answer = confirm("Are you sure you want to delete?")
      if (answer) {
        window.location.href = "/cms/delete_art?id=" +id;
// alert("sss")
            // window.location.href = "http://yourlinkhere/'+id+'";
          }
          else {
            // do nothing
          }
        }

