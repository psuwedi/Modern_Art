<script type="text/javascript">
    function showPage(p,paginate){
// alert(paginate);
      var row;

     for(var i = paginate; i >= 1; i--){
       row = 200*i;
       if (i == p){
            document.getElementById(row).style.display = "block";
            // document.getElementById(p).class = "active";
       }else{
         document.getElementById(row).style.display = "none";
         // document.getElementById(p).class = "not";
       }
     }

      // document.getElementById(p).style.display = "none";
    }
</script>
