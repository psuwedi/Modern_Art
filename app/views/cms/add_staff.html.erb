<%= render :partial => "shared/cms_index" %>



<div id="page-wrapper" style="min-height: 900px">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="page-header">Employee/Staff </h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>

  <div class="row">
    <div class="col-sm-10">



      <%  if flash[:notice] %>
      <div col-xs-offset-4 col-xs-4 col-xs-offset-4>
        <div class="alert alert-success ">
          <button data-dismiss="alert" class="close" type="button">×</button>
          <h4>Success</h4>
          <%= flash[:notice] %>
        </div>
      </div>
      <% end %>

      <%  if flash[:error] %>
      <div col-xs-offset-4 col-xs-4 col-xs-offset-4>
        <div class="alert alert-error col-xs-offset-4 col-xs-4 col-xs-offset-4">
          <button data-dismiss="alert" class="close" type="button">×</button>
          <h4>Error</h4>
          <%= flash[:error] %>
        </div>

      </div>
      <% end %>



      <div class="panel panel-grey" >
        <div class="panel-heading" style="padding: 15px">
          <div class="row">




                    <h5>Register New Staff</h5> <br>

        <fieldset id="account">
          <legend> Employee Details</legend>
       <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal'}, multipart: true) do |f| %>
  

  <%= devise_error_messages! %>



          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-firstname">First Name</label>
            <div class="col-sm-10">
              <input type="text" name="firstname" value="" placeholder="First Name" id="input-firstname" class="form-control" />
               </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-lastname">Last Name</label>
            <div class="col-sm-10">
              <input type="text" name="lastname" value="" placeholder="Last Name" id="input-lastname" class="form-control" />
               </div>
          </div>






          <div class="form-group required">
            <%= f.label :email, "E-Mail:", class: " control-label col-sm-2" %>
             <div class="col-sm-10">
            <%=f.text_field :email, :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}', class: " form-control control-label ", :required => true %>
              </div>
         </div>





          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-telephone">Telephone</label>
            <div class="col-sm-10">
              <input type="tel" name="telephone" value="" placeholder="Telephone" id="input-telephone" class="form-control" />
               </div>
          </div>




            <div class="form-group " id = "artist" style="">
              <label class="control-label col-sm-2" for="role">Register as: </label>
              <div class="col-sm-10">

                <select name="role" class="form-control">
                  <option value="employee"> supervisor</option>
                   <option value="employee">employee</option>
                </select>

            
              </div>
            </div>






  <input type="hidden" value="cms" name="src" >





                  </fieldset>




        <fieldset>



          <legend>Temporary password</legend>

            
         <div class="form-group">

        

            <label class="control-label col-sm-2" for="district"> Password </label>

                <div class="col-sm-10">
         
                     <%= f.password_field :password , class: " form-control"  ,:required => true%>


            </div>
         </div>



              <div class="form-group">

        

            <label class="control-label col-sm-2" for="district"> password confirmation </label>

                      <div class="col-sm-10">
              
                  <%= f.password_field :password_confirmation ,  class: " form-control"  ,:required => true%>

               </div>

          </div>


        </fieldset>

 
  <%= f.submit "Submit", class: "btn btn-default btn-primary  pull-right" %>

  <br><br>

<% end %>






    </div>
  </div>

</div>
</div>
