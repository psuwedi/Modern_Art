
<%= render :partial => "shared/cms_index" %>



<div id="page-wrapper" style="min-height: 900px">
  <div class="row">
    <div class="col-sm-12">
      <h1 class="page-header">Arts </h1>
    </div>
    <!-- /.col-lg-12 -->
  </div>

  <div class="row">
    <div class="col-sm-10">



      <%  if flash[:notice] %>
      <div col-xs-offset-4 col-xs-4 col-xs-offset-4>
        <div class="alert alert-success ">
          <button data-dismiss="alert" class="close" type="button">×</button>
          <h4>Success</h4>
          <%= flash[:notice] %>
        </div>
      </div>
      <% end %>

      <%  if flash[:error] %>
      <div col-xs-offset-4 col-xs-4 col-xs-offset-4>
        <div class="alert alert-error col-xs-offset-4 col-xs-4 col-xs-offset-4">
          <button data-dismiss="alert" class="close" type="button">×</button>
          <h4>Error</h4>
          <%= flash[:error] %>
        </div>

      </div>
      <% end %>



      <div class="panel panel-grey" >
        <div class="panel-heading" style="padding: 15px">
          <div class="row">


           <form class="form-horizontal" action="/cms/update_art" method="POST"  enctype="multipart/form-data">
             <div class="col-sm-12">
             	<h6> Update art details</h6>
              <a href="/cms/all_arts" class="btn btn-success pull-right" style="margin:5px; border-radius:0px"> <span class=""> List arts</span>
              </a>

            </div>
            <div class="form-group">
              <label class="control-label col-sm-2" for="f_name">Art Name:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="name"  value = '<%= @art.name %>' required placeholder="Enter Name">
              </div>
            </div>


<input type="hidden" class="form-control" name="id" value="<%= @art.id %>" >



             <div class="form-group">
              <label class="control-label col-sm-2" for="f_name">Display Title:</label>
              <div class="col-sm-10">
                <input type="text" class="form-control" name="title" value = '<%= @art.title %>' required placeholder="Enter short discription">
              </div>
            </div>



            <div class="form-group" id = "image">
              <label class="control-label col-sm-2" for="role">Price</label>
              <div class="col-sm-10">

                <input type="number" class="form-control-file"  min="0.00" step = "0.01"  value = '<%= @artprice %>' name="price" aria-describedby="fileHelp" placeholder="Price">
                
              </div>
            </div>



            <div class="form-group" id = "image">
              <label class="control-label col-sm-2" for="role">qty</label>
              <div class="col-sm-10">

                <input type="number" class="form-control-file"  min="1" step = "1" name="qty" value = '<%= @art.stock_level%>' aria-describedby="fileHelp" required placeholder="Quatity">
                
              </div>
            </div>



           


            <div class="form-group" >
              <label class="control-label col-sm-2" for="role">Art description:</label>
              <div class="col-sm-10">

                <textarea class="form-control" rows="5" id="art"  value = '<% @art.description %>' name = "description" required></textarea>
              </div>

            </div>

          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-info" >Update</button>
          </div>
        </div>
      </form>
    </div>
  </div>

</div>
</div>
