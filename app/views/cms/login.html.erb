<div class="panel panel-white">
    <div class="panel-heading">
        <h3 class="panel-title" style="text-align: center;">
            Staff Login 
        </h3>


    </div>
    <div class="panel-body">





        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">




              <%  if flash[:error] %>
              <div col-xs-offset-4 col-xs-4 col-xs-offset-4>
                <div class="alert alert-warning">
                  <button data-dismiss="alert" class="close" type="button">Ã—</button>
                  <h4>Error</h4>
                  <%= flash[:error] %>
              </div>

          </div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <label class="control-label" for="input-email">E-Mail Address</label>

            <%= f.email_field :email, autofocus: true, class: "form-control"  %>  

        </div>
        <div class="form-group">
            <label class="control-label" for="input-password">Password</label>
            <input type="password" name="user[password]" value="" placeholder="Password" id="input-password" class="form-control" />
        </div>



        <div class="form-group">


            <button type="submit" class="btn btn-info" style="border-radius: 0px" > Login</button>
        </div>
        <% end %>





    </div>
    <div class="col-sm-4"></div>
</div>




</div>





