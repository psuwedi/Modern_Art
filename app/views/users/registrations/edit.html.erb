
<%= render :partial => "shared/app_nav" %>
<%= render :partial => "shared/nav" %>





<div class="panel panel-white col-xs-offset-2 col-xs-8 col-xs-offset-2 " style="border-radius:0px">


  <ol class="breadcrumb" style="border-radius: 0px">
  <li class="breadcrumb-item"><a href="#">Home</a></li>
  <li class="breadcrumb-item"><a href="#">Account</a></li>
  <li class="breadcrumb-item active">Update</li>
</ol>


    

    <div id="content" class="col-sm-9">
      <h3>Update Profile</h3>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal'}, multipart: true) do |f| %>
  

 <h6 style="color:brown"> <%= devise_error_messages! %></h6> 


      
        <fieldset id="account">
         
       



          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-firstname">First Name</label>
            <div class="col-sm-10">
              <input type="text" name="firstname" value="" placeholder="First Name" id="input-firstname" class="form-control" />
               </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-lastname">Last Name</label>
            <div class="col-sm-10">
              <input type="text" name="lastname" value="" placeholder="Last Name" id="input-lastname" class="form-control" />
               </div>
          </div>






          <div class="form-group required">
            <%= f.label :email, "E-Mail:", class: " control-label col-sm-2" %>
             <div class="col-sm-10">
            <%=f.text_field :email, :required => true, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}', class: " form-control control-label ", :required => true %>
              </div>
          </div>



          



          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="form-group required">
            <div style="color:brown" >

              Currently waiting confirmation for: <%= resource.unconfirmed_email %>
              

            </div>
          <% end %>

  <div class="form-group required">
     <%= f.label :password, "Password:", class: " control-label col-sm-2" %>

  <div class="col-sm-10">
    <%= f.password_field :password, class: " form-control",  autocomplete: "off" %> <br>
   
  
      <i style="color: brown"> <%= @minimum_password_length %> characters minimum (leave blank if you don't want to change it)</i> 

    <% if @minimum_password_length %>
    <% end %>

     </div>
  </div>

  <div class="form-group">

    <%= f.label :password_confirmation, "Password Confirmation", class: " control-label col-sm-2" %>
     <div class="col-sm-10">
      <%= f.password_field :password_confirmation, class: " form-control",  autocomplete: "off" %> 

      </div>
  </div>

  <div class="form-group">



     <%= f.label :current_password, "Current Confirmation", class: " control-label col-sm-2" %> 

      <div class="col-sm-10">
        <%= f.password_field :password_field, autocomplete: "off" , class: " form-control col-sm-10" %>   
        <i style="color:brown">(we need your current password to confirm your changes)</i>
      </div>

  </div>

    <div class="form-group">
        <div class="col-sm-6 pull-right" style="">
          <%= f.submit "Update" , class: " btn btn-white" %>

              <small>
                  <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

              </small>
        </div>




            
    </div>
  <% end %>

</div>









<div class="col-sm-3" style="margin-top: 50px">
  
  <%= render :partial => "shared/account_nav" %>

</div>

</div>









    </div>




</div>




<br><br>







<%= render :partial => "shared/footer" %>